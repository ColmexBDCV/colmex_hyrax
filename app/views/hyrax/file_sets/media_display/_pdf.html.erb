<% if Hyrax.config.display_media_download_link? %>
    <div>
      <h2 class="sr-only"><%= t('hyrax.file_set.show.downloadable_content.heading') %></h2>
      <%#= image_tag thumbnail_url(file_set),
                    class: "representative-media",
                    alt: "",
                    role: "presentation" %>

      <iframe id="pdfIframe" src="<%= pdfjs.full_path(file: hyrax.download_path(file_set)) %>" style="width: 100%;height:950px"></iframe>
      <%= render "shared/download_link", file_set: file_set  %>

    </div>
    <script>
      function go_to_page(num) {
        document.getElementById("pdfIframe").contentWindow.PDFViewerApplication.page=num
      }
    </script>

    <div>
      <%= image_tag thumbnail_url(file_set),
                    class: "representative-media",
                    alt: "",
                    role: "presentation" %>
    </div>
<% end %>


