<%
if Hyrax.config.google_analytics_id?
tracking_id = Hyrax.config.google_analytics_id
%>
<script type="text/javascript">
  (function() {
    var at = document.createElement('script'); at.type = 'text/javascript'; at.async = true;
    at.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://') + 'cdnjs.cloudflare.com/ajax/libs/autotrack/2.4.1/autotrack.js';
    var t = document.getElementsByTagName('script')[0]; t.parentNode.insertBefore(at, t);
  })();

  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  <% if Rails.env.development? %>
    // This allows us to look at GA data live from locahost
    ga('create', '<%= tracking_id %>', 'auto', {'legacyCookieDomain': 'none'});
  <% else %>
    ga('create', '<%= tracking_id %>', 'auto')
  <% end %>
    ga('send', 'pageview');
    ga('require', 'eventTracker');

</script>
<% end %>
